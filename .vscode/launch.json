{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Jasmine Unit Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine-ts",
            "cwd": "${workspaceFolder}",
            "args": [
                "${workspaceFolder}\\${relativeFile}"
            ],
            "env": {
                "NODE_ENV": "development",
                "NODE_CONFIG_DIR": "${workspaceFolder}"
            },
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "windows": {
                "program": "${workspaceFolder}/node_modules/.bin/jasmine-ts",
                "args": [
                    "${workspaceFolder}\\${relativeFile}"
                ]
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch the Module",
            "cwd": "${workspaceFolder}",
            "args": [
                "${workspaceFolder}/${relativeFile}"
            ],
            "env": {
                "NODE_ENV": "development",
                "NODE_CONFIG_DIR": "${workspaceFolder}"
            },
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "windows": {
                "args": [
                    "${workspaceFolder}\\${relativeFile}"
                ]
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch CLI",
            "cwd": "${workspaceFolder}",
            "args": [
                "${workspaceFolder}/bin/appvmgr",
                "set-status",
                "RC.4",
                "-d",
                "${workspaceFolder}"
            ],
            "env": {
                "NODE_ENV": "development",
                "NODE_CONFIG_DIR": "${workspaceFolder}"
            },
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "windows": {
                "args": [
                    "${workspaceFolder}\\bin\\appvmgr",
                    "init"
                ]
            }
        }
    ]
}

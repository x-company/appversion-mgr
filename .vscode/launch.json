{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Mocha Unit Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}",
            "args": [
                "--opts",
                "${workspaceFolder}/test/mocha.opts",
                "${workspaceFilder}/${relativeFile}"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "windows": {
                "program": "${workspaceFolder}\\node_modules\\mocha\\bin\\_mocha",
                "args": [
                    "--opts",
                    "${workspaceFolder}\\test\\mocha.opts",
                    "${workspaceFolder}\\${relativeFile}"
                ]
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch the Module",
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "preLaunchTask": "Build",
            "env": {
                "NODE_ENV": "development",
                "NODE_CONFIG_DIR": "${workspaceFolder}"
            },
            "runtimeArgs": [
                "--nolazy",
                "--require",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/${relativeFile}"
            ],
            "windows": {
                "cwd": "${workspaceFolder}",
                "args": [
                    "${workspaceFolder}\\${relativeFile}"
                ]
            }
        }
    ]
}

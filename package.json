{
    "name": "appversion-mgr",
    "version": "0.1.0",
    "description": "AppVersion Manager is a CLI tool whose purpose is to provide a unique manager of the version of you application.",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "bin": {
        "appvmgr": "bin/appvmgr.js"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/x-company/appversion-mgr.git"
    },
    "bugs": {
        "url": "https://github.com/x-company/appversion-mgr/issues"
    },
    "homepage": "https://github.com/x-company/appversion-mgr",
    "author": "Roland Breitschaft <info@x-company.de> (https://www.x-company.de)",
    "license": "MIT",
    "keywords": [
        "app",
        "version",
        "build",
        "commit",
        "semantic",
        "versioning",
        "semver",
        "tag",
        "status"
    ],
    "scripts": {
        "lint": "yarn lint:code && yarn lint:test || true",
        "lint:code": "tslint -c tslint.json 'lib/**/*.ts' -t verbose",
        "lint:test": "tslint -c tslint.json 'spec/**/*.ts' -t verbose",
        "prebuild": "yarn lint",
        "build": "tsc -p ./tsconfig.json",
        "watch": "tsc -w -p ./tsconfig.json",
        "pretest": "yarn build",
        "test": "jasmine-ts 'spec/**/*.spec.ts'",
        "prepublish": "yarn test",
        "link": "npm link",
        "unlink": "npm unlink"
    },
    "devDependencies": {
        "@types/concat-stream": "^1.6.0",
        "@types/find-root": "^1.1.1",
        "@types/jasmine": "^3.3.2",
        "@types/node": "^10.12.15",
        "@types/replacestream": "^4.0.0",
        "@types/semver": "^5.5.0",
        "@types/walk": "^2.3.0",
        "concat-stream": "^1.6.2",
        "jasmine": "^3.3.1",
        "jasmine-spec-reporter": "^4.2.1",
        "jasmine-ts": "^0.3.0",
        "ts-node": "^7.0.1",
        "tsconfig-paths": "^3.7.0",
        "tslint": "^5.11.0",
        "typescript": "^3.2.2"
    },
    "dependencies": {
        "chalk": "^2.4.1",
        "commander": "^2.19.0",
        "find-root": "^1.1.0",
        "replacestream": "^4.0.3",
        "self-stream": "^1.1.1",
        "semver": "^5.6.0",
        "walk": "^2.3.14"
    }
}
